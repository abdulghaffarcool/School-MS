<h2>Search Students</h2>
<form action="/students" method="GET">
<div class="form-row">
    <div class="form-item">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>" >
    </div>
    <div class="form-item">
        <label for="fatherName">Father Name</label>
        <input type="text" name="fatherName" value="<%= searchOptions.fatherName %>" >
    </div>    
</div>
<div class="form-row">
    <div class="form-item">
        <label for="DOB">Date of Birth</label>
        <input type="date" name="DOB" value="<%= searchOptions.DOB %>" >    
    </div>
    <div class="form-item">
        <label for="rollNo">Roll No</label>
        <input type="text" name="rollNo" value="<%= searchOptions.rollNo %>" >
    </div>
</div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>    
</form>
<br>
<div>
    <%- include('../partials/studentGrid', { students: students }) %>
</div>